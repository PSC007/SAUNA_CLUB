<div class="container">
  <h1 class="title-show mb-4"><strong><%= @sauna.name %></strong></h1>

  <div class="img-sauna">
    <% if @sauna.photo.attached? %>
      <%= cl_image_tag @sauna.photo.key, height: 300, width: 600, crop: :fill %>
    <% end %>
  </div>

  <div>
    <ul class="show-list">
      <li><%= @sauna.description %></li>
      <li>Temperature: <%= @sauna.temperature %>Â°</li>
      <li>Number of seats: <%= pluralize(@sauna.seat.to_i, "seat") %></li>
    </ul>
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Book your sauna</h2>

      <%= simple_form_for [@sauna, @booking] do |f| %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.submit "Go", class: "btn btn-primary" %>
      <% end %>
  </div>
