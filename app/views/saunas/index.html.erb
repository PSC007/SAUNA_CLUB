<div class="banner-all-pages">
  <div class="container">
    <h1><strong>Find yourself a warm spot</strong></h1>
  </div>
</div>

<div class="main-container">
  <div class="card-container">
    <% @saunas.each do |sauna|%>
      <div class="card-sauna">
        <%= link_to sauna_path(sauna) do %>
          <%= cl_image_tag(sauna.photo.key, class: "img-sauna") %>
        <% end %>
        <div class="card-sauna-infos">
          <div>
            <h2><%= sauna.name %></h2>
            <p><%= sauna.description %></p>
            <p><%= pluralize(sauna.seat.to_i, "seat") %></p>
          </div>
          <div>
            <h2 class="card-sauna-temperature"><%= "#{sauna.temperature}Â°" %></h2>
            <%= cl_image_tag sauna.user.photo.key, class: "card-sauna-user avatar-bordered" %>
          </div>
        </div>
          <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-sauna-user avatar-bordered" /> -->
      </div>
    <% end %>
  </div>
  <div id="map"
     style="width: 50%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
