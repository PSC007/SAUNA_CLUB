<div class="container", style="width:350px">
  <div class="login-signup-title-design", style="margin-bottom:40px">
    <h2>Login</h2>
  </div>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div>
      <div class="container form-actions alignment-form-actions", style="margin-top:30px">
        <%= f.button :submit, "Log in", class: "btn btn-all-pages btn-sign-up-log-in btn-focus"%>
      </div>
    </div>
  <% end %>
    <div class="container">
      <%= render "devise/shared/links" %>
    </div>
</div>
